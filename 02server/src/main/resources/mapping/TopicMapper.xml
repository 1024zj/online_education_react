<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ff.dao.TopicMapper">
	<resultMap id="topicMap" type="com.ff.pojo.Topic">
		<id column="id" property="id" />
		<result column="name" property="name" />

		<collection property="list" javaType="ArrayList"
			ofType="com.ff.pojo.Course" column="id"
			select="com.ff.dao.CourseMapper.getCoursesByTopicId">
		</collection>
	</resultMap>

	<insert id="insert" keyProperty="id" useGeneratedKeys="true">
		insert
		into topic(name)
		values (#{name})
	</insert>

	<select id="selectTopics" resultMap="topicMap">
		select * from
		topic
	</select>

	<select id="selectTopic" resultMap="topicMap">
		select * from
		topic
		where name
		= #{name}
	</select>

</mapper>