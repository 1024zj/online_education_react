<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ff.dao.VideoMapper">
	<resultMap id="videoMap" type="com.ff.pojo.Video">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="chapterOrder" property="order" />
	</resultMap>

	<!-- 根据章节id获得视频 -->
	<select id="getVideosByChapterId" resultMap="videoMap">
		select *from videos
		where chapter_id = #{id} order by v_order
	</select>

	<!-- 增加新视频 -->
	<insert id="insert" parameterType="com.ff.pojo.Video"
		keyProperty="id" useGeneratedKeys="true">
		insert into video
		(name,chapter_id,v_order,url)
		values (#{name},
		#{chapter_id},#{order},#{url})
	</insert>



	<!-- 查询所有视频 -->
	<select id="selectAllVideo" resultMap="videoMap">
		select * from video
	</select>





	<!-- 根据视频信息查询视频 -->
	<select id="getVideo" resultMap="videoMap">
		select * from video where id =
		#{id}
	</select>



	<!-- 根据id更新视频 -->
	<update id="updateById" parameterType="com.ff.pojo.Video">
		update video
		<set>
			<if test="url != null">
				url = #{url},
			</if>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="chapter_id != chapter_id">
				chapter_id = #{chapter_id},
			</if>
			<if test="chapterOrder != null">
				chapterOrder = #{chapterOrder},
			</if>
		</set>
		where id = #{id}
	</update>

</mapper>